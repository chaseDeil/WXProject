/* pages/setting/setting.wxss */
page {
  height: 100%;
  background-color: #f2f2f2;
}

.textView {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.imgView {
  width: 20%;
}

.nameText {
  line-height: 50rpx;
  margin: 20rpx 20rpx 0rpx 20rpx;
  /* padding: 10px 10px 0px 10px; */
  height: 50rpx;
  font-size: 32rpx;
  width: 100%;

  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;

}
.signText {

  line-height: 50rpx;
  margin: 0rpx 20rpx 20rpx 20rpx;
  height: 50rpx;
  width: 90%;
  font-size: 32rpx;
  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  color: #4c4c4c;
}

.cell {
  margin-top: 20rpx;
  height: 202rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.cellSingle {
  margin-top: 20rpx;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.item {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.itemImg {
  margin: 20rpx 24rpx 20rpx 24rpx;
  width: 40rpx;
  height: 40rpx;
}

.itemName {
  margin-left: 40rpx;
  font-size: 32rpx;
  line-height: 100rpx;
}

.line {
  background-color: #f2f2f2;
  margin-left: 40rpx;
  height: 2rpx;
}

/*按钮*/
.loginBtnView { 
  width: 100%; 
  height: auto; 
  /* background-color: #c83b2d;  */
  margin-top: 0rpx; 
  margin-bottom: 0rpx; 
  padding-bottom: 0rpx; 
} 
  
.logoutBtn { 
  width: 90%; 
  margin-left: 5%;
  margin-top: 70rpx;
  background-color: #c83b2d;
  color: #fff;
  font-size: 38rpx;
}