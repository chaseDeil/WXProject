    objList: ""
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this;
    that.setData({
      guid: options.guid
    })
    util.requestGet('learnManagementAction!learnCourseInfo.action', { userId: app.globalData.userId, strCourseGuid: options.guid }, function (res) {
      that.setData({
        obj: res.data['obj'],
        objList: res.data['objList']
      })
    });
  },

  /**
