/* pages/setting/setting.wxss */
page {
  height: 100%;
  background-color: #f2f2f2;
}

.textView {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.imgView {
  width: 20%;
}

.nameText {
  line-height: 25px;
  margin: 10px 10px 0px 10px;
  /* padding: 10px 10px 0px 10px; */
  height: 25px;
  font-size: 16px;
  width: 100%;

  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;

}
.signText {

  line-height: 25px;
  margin: 0px 10px 10px 10px;
  height: 25px;
  width: 90%;
  font-size: 14px;
  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  color: #4c4c4c;
}

.cell {
  margin-top: 10px;
  height: 81px;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.cellSingle {
  margin-top: 10px;
  height: 40px;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.item {
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.itemImg {
  margin: 10px 12px 10px 12px;
  width: 20px;
  height: 20px;
}

.itemName {
  margin-left: 20px;
  font-size: 14px;
  line-height: 40px;
}

.line {
  background-color: #f2f2f2;
  margin-left: 20px;
  height: 1px;
}

/*按钮*/
.loginBtnView { 
  width: 100%; 
  height: auto; 
  /* background-color: #c83b2d;  */
  margin-top: 0px; 
  margin-bottom: 0px; 
  padding-bottom: 0px; 
} 
  
.logoutBtn { 
  width: 90%; 
  margin-left: 5%;
  margin-top: 35px;
  background-color: #c83b2d;
  color: #fff;

}