/* pages/mine/mine.wxss */

page {
  height: 100%;
}
.mineScrollView {
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  /* overflow: scroll;
  overflow-y: true; */
}
.topView {
  margin-top: 10px;
  height: 70px;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.headerImg {
  padding: 10px;
  width: 50px;
  height: 50px;
  
}

.textView {
  display: flex;
  flex-direction: column;
  width: 80%;
}

.imgView {
  width: 20%;
}

.nameText {
  line-height: 25px;
  margin: 10px 10px 0px 10px;
  /* padding: 10px 10px 0px 10px; */
  height: 25px;
  font-size: 16px;
  width: 100%;

  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;

}
.signText {

  line-height: 25px;
  margin: 0px 10px 10px 10px;
  height: 25px;
  width: 90%;
  font-size: 14px;
  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  color: #4c4c4c;
}

.cell {
  margin-top: 10px;
  height: 81px;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.cellSingle {
  margin-top: 10px;
  height: 40px;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.item {
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.itemImg {
  margin: 10px 12px 10px 12px;
  width: 20px;
  height: 20px;
}

.itemName {
  font-size: 14px;
  line-height: 40px;
}

.line {
  background-color: #f2f2f2;
  margin-left: 44px;
  height: 1px;
}

