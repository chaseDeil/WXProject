<!--pages/Login/Login.wxml-->
<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="../../image/logo.png"></image> 
 </view> 

 <view class="login-from"> 
  
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="../../image/shoujihao.png"></image> 
  <label class="loginLab"><text>手机号</text></label> 
  <input class="inputText" type='number' maxlength='11' placeholder="请输入手机号" bindinput="phoneInput" /> 
 </view> 
 <!-- <view class="line"></view>  -->
  
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../../image/mima.png"></image> 
  <label class="loginLab"><text>密码</text></label> 
  <input class="inputText" maxlength='20' password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 
  
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn"  size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login"><text>登录</text></button> 
 </view> 
 </view> 
</view>
<!--pages/login/login.wxml-->
<text>pages/login/login.wxml</text>
