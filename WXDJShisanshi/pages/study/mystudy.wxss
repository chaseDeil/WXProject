/* pages/study/mystudy.wxss */

.containt {
  width: 100%;
  height: 90%;
}

#scroll-list {
  height: 85%;
}

.header {
  height: 15%;
  background-color: #b6011f;
  flex-direction: row;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.header_item {
  width: 25%;
  height: 100%;
  text-align: center;
  color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.header_item_pressed {
  width: 25%;
  height: 45%;
  text-align: center;
  color: #fff;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #ab3548;
}

.bottom_view {
  flex-direction: row;
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 10%;
}

.bottm_icon {
  width: 100%;
  height: 50rpx;
  margin-top: 15rpx;
}

.bottm_item_text {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #4c4c4c;
}

.bottm_item_text_seleced {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #b6011f;
}

.cover {
  width: 40%;
  height: 200rpx;
  border-radius: 15rpx;
}

progress {
  height: 30rpx;
}

page {
  height: 100%;
}

.dataCover {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
}

.dataItemPressed {
  flex-direction: row;
  display: flex;
  align-items: center;
  background-color: #fafafa;
}
