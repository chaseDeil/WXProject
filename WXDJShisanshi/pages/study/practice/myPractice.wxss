page {
  height: 100%;
}

.scrollView {
  width: 100%;
  height: 100%;
  /* background-color: #f2f2f2; */
  
}

.cell {
  background-color: #fff;
  /* margin: 20rpx 0rpx; */
  /* height: 300rpx;  */
}

.cover {
  width: 40%;
  height: 200rpx;
  margin: 0rpx 20rpx 20rpx 20rpx;
  border-radius: 20rpx;
}

.itemName {
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 34rpx;
  color: #4c4c4c;
  margin: 10rpx 20rpx 10rpx 20rpx;
}

.itemNameType {
  height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #999999;
  margin: 0rpx 20rpx 0rpx 0rpx;
}

.itemBtn {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  /* background-color: #c83b2d */
}

.btnL {
  width: 40%;
  margin-right: 2%;
  margin-left: 0;
  background-color: #c83b2d;
  color: #fff;
  font-size: 28rpx;
  border-color: #c83b2d;
  border-width: 2rpx;
  line-height: 80rpx;
}

.btnR {
  width: 42%;
  margin-left: 2%;
  background-color: #fff;
  color: #c83b2d;
  font-size: 28rpx;
  border-color: #c83b2d;
  border-width: 2rpx;
  line-height: 80rpx;
}

.btnR::after {
   border:2rpx solid #c83b2d; 
}